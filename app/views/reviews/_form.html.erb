      <%=render "errors"%>
      <%= form_for [@movie,@reviews]  do |form|%>
       <div class="form-group">
        <%=form.label :Name %><br>
        <%=form.text_field :name ,:autofocus =>true,class:"form-control"%><br>
       </div>
      <div class="form-group">
        <%=form.label :Stars %><br>
       <%= form.number_field :stars%><br>
      </div>

      <div class="form-group">
        <%=form.label :Comment %><br>
        <%=form.text_field  :comment,class:"form-control" %><br>
      </div>

      <%=form.submit%>&nbsp&nbsp&nbsp&nbsp
      <button><%=link_to "cancel" ,root_url%></button>
      <%end%>

