     <%=render "errors"%>
      <%= form_for @user  do |form|%>
       <div class="form-group">
        <%=form.label :Name %><br>
        <%=form.text_field :name ,:autofocus =>true,class:"form-control"%><br>
       </div>

      <div class="form-group">
        <%=form.label :email %><br>
       <%= form.text_field :email,class:"form-control"%><br>
      </div>

      <div class="form-group">
        <%=form.label :password %><br>
        <%=form.password_field :password,class:"form-control" %><br>
      </div>
       <div class="form-group">
        <%=form.label :password_confirmation %><br>
        <%=form.password_field :password_confirmation,class:"form-control" %><br>
      </div>

      <%=form.submit%>&nbsp&nbsp&nbsp&nbsp
      <button><%=link_to "cancel" ,users_path%></button>
      <%end%>
