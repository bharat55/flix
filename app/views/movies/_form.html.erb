      <%=render "errors"%>
      <%= form_for @movie  do |form|%>
       <div class="form-group">
        <%=form.label :Title %><br>
        <%=form.text_field :title,:autofocus =>true,class:"form-control"%><br>
       </div>
      <div class="form-group">
        <%=form.label :Rating %><br>
       <%= form.select :rating, Movie::RATINGS, prompt: "Pick one"  %><br>
      </div>

      <div class="form-group">
        <%=form.label :Total_Gross %><br>
        <%=form.number_field  :total_gross,class:"form-control" %><br>
      </div>

      <div class="form-group">
        <%=form.label :Description %><br>
        <%=form.text_area :description,class:"form-control"%><br>
      </div>
      <div class="form-group">
        <%=form.label :Released_on %><br>
        <%=form.date_field :released_on,class:"form-control"%><br>
      </div>
      <div class="form-group">
        <%=form.label :Cast %><br>
        <%=form.text_field :cast,class:"form-control"%><br>
      </div>
      <div class="form-group">
        <%=form.label :Director %><br>
        <%=form.text_field :director,class:"form-control"%><br>
      </div>
      <div class="form-group">
        <%=form.label :Duration %><br>
        <%=form.text_field :duration,class:"form-control"%><br>
      </div>
       <div class="form-group">
        <%=form.label :Image %><br>
        <%=form.text_field :image_file_name,class:"form-control"%><br>
      </div>
      <%=form.submit%>&nbsp&nbsp&nbsp&nbsp
      <button><%=link_to "cancel" ,root_url%></button>
      <%end%>

